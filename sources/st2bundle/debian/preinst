#!/bin/sh
# preinst script for st2bundle
#
# see: dh_installdeb(1)

set -e

if [ "$1" = "install" -a -n "$2" ] ; then
  [ -f /etc/logrotate.d/st2.disabled ] && mv -f /etc/logrotate.d/st2.disabled /etc/logrotate.d/st2
fi

# Create st2 users
adduser --group --disabled-password --no-create-home --system st2 >/dev/null 2>&1
adduser --group stanley >/dev/null 2>&1
adduser --disabled-password --ingroup stanley stanley >/dev/null 2>&1

# case "$1" in
#     install|upgrade)
#     ;;

#     abort-upgrade)
#     ;;

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
