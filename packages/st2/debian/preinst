#!/bin/sh
# preinst script for st2
#
# see: dh_installdeb(1)

set -e
exec >/dev/null

if [ "$1" = "install" -a -n "$2" ] ; then
  [ -f /etc/logrotate.d/st2.disabled ] && mv -f /etc/logrotate.d/st2.disabled /etc/logrotate.d/st2
fi

# Create st2 users
if (! id st2 2>/dev/null); then
  adduser --group --disabled-password --no-create-home --system st2
fi

if (! id stanley 2>/dev/null); then
  adduser --group stanley
  adduser --disabled-password --gecos "" --ingroup stanley stanley
fi

# case "$1" in
#     install|upgrade)
#     ;;

#     abort-upgrade)
#     ;;

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
